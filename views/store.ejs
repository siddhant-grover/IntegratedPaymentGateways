<!DOCTYPE html>
<html>
    <head>
        <title>The Generics | Store</title>
        <meta name="description" content="This is the description">
        <script src="https://polyfill.io/v3/polyfill.min.js?version=3.52.1&features=fetch" defer></script>
        <script src="https://js.stripe.com/v3/"></script>
        <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
        <link rel="stylesheet" href="styles.css" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <script> var stripePublicKey = '<%= stripePublicKey%>' 
        var KEY_ID = '<%=KEY_ID%>'
        </script>
        <script src="store.js" defer></script>


    </head>
    <body>
        <header class="main-header">
            <nav class="main-nav nav">
                <ul class="main-nav-ul">
                    <li><a href="index.html">HOME</a></li>
                    <li><a href="store">STORE</a></li>
                    
                </ul>
            </nav>
        </header>
        <section class="container content-section">
            <h2 style="text-align: center;">MUSIC</h2>
            <div class="shop-items">
            <% items.music.forEach(function(item){ %>
                <div class="shop-item" data-item-id="<%= item.id%>">
                    <span class="shop-item-title"><%=item.name %></span> 
                    <img class="shop-item-image" src="Images/<%= item.imgName%>">
                    <div class="shop-item-details">
                        <span class="shop-item-price">$<%=item.price /100%></span>
                        <button class="btn btn-primary shop-item-button" type="button">ADD TO CART</button>
                    </div>
                </div>
                <% })%>   
            </div>
        </section>
        <section class="container content-section">
            <h2 style="text-align: center;">MERCH</h2>
           
            <div class="shop-items">

                <%items.merch.forEach((item)=>{ %>
                    <div class="shop-item" data-item-id="<%=item.id%>">
                        <span class="shop-item-title"><%=item.name%></item.name></span>
                        <img class="shop-item-image" src="Images/<%=item.imgName%>">
                        <div class="shop-item-details">
                            <span class="shop-item-price">$<%=item.price/100%></span>
                            <button class="btn btn-primary shop-item-button" type="button">ADD TO CART</button>
                        </div>
                    </div>
                <%})%>


                
            </div>
        </section>
        <section class="container content-section">
            <h2 style="text-align: center;">CART</h2>
            <div class="cart-row">
                <span class="cart-item cart-header cart-column">ITEM</span>
                <span class="cart-price cart-header cart-column">PRICE</span>
                <span class="cart-quantity cart-header cart-column">QUANTITY</span>
            </div>
            <div class="cart-items">
            </div>
            <div class="cart-total">
                <strong class="cart-total-title">Total</strong>
                <span class="cart-total-price">$0</span>
            </div>
          
            <label for="gateways" style="font-weight:bold;color: black;padding-right:5%;font-size:20px;">Choose a payment method:</label>
            <select name="cars" id="gateways" ">
                <option value="Stripe">Stripe</option>
                <option value="Paypal">Paypal</option>
                <option value="Razorpay">Razorpay</option>
              <!-- <option value="PayU">PayU</option> -->
            </select>
            
            <button style="margin-top:10%" class="btn btn-primary btn-purchase" type="button">PURCHASE</button>
        </section>
        <footer class="main-footer">
            <div class="container main-footer-container">
                <h2 style="color: aliceblue;font-size: 100%;">Refrences</h2>
                <ul class="nav footer-nav" >
                    <li>
                        <a href="https://www.youtube.com/watch?v=mI_-1tbIXQI" target="_blank">
                            <img src="Images/YouTube Logo.png">
                        </a>
                    </li>
                    <li>
                        <a href="https://stripe.com/docs" target="_blank">
                            Stripe docs
                        </a>
                    </li>
                    <li>
                        <a href="https://razorpay.com/docs/payment-gateway/web-integration/standard/" target="_blank">
                            Razorpay docs
                        </a>
                    </li>
                    <li>
                        <a href="https://www.npmjs.com/package/paypal-rest-sdk" target="_blank">
                            Paypal rest sdk
                        </a>
                    </li>
                </ul>
            </div>
        </footer>
    </body>
</html>